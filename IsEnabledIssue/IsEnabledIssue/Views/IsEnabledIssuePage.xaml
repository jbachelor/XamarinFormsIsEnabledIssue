<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             Title="{Binding Title}"
             x:Class="IsEnabledIssue.Views.IsEnabledIssuePage">
    <StackLayout Spacing="15"
                 Padding="20">
        <Entry Placeholder="must have at least 5 characters"
               Keyboard="Email"
               Text="{Binding EntryText}" />
        <Label Text="Please enter at least 5 characters"
               Margin="0,-15,0,0"
               FontSize="Micro"
               IsVisible="{Binding IsEnabled, Source={x:Reference mySweetButton}, Converter={StaticResource invertBoolean}}"
               FontAttributes="Italic" />
        <!--    An implicit style for Buttons is in App.xaml    -->
        <Button x:Name="mySweetButton"
                Text="Enable When Entry Is Valid"
                Command="{Binding MyButtonTappedCommand}" />
        <StackLayout Orientation="Horizontal">
            <Switch IsToggled="{Binding AllowWhitespaceCharacters}" />
            <Label Text="Count whitespace characters" />
        </StackLayout>
        <Label Text="{Binding ExplanationText}" />
    </StackLayout>
</ContentPage>